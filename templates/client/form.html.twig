{% extends 'base.html.twig' %}

{% block title %}Форма создания клиента{% endblock %}

{% block body %}
    <div class="container">
      <br>
      <br>
      <br>
      <br>
        <h2>Форма создания клиента</h2>
       <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
           {{ form_start(form) }}

           <div class="form-group">
               <label for="textarea">{{ form_label(form.login) }}</label>
               {{ form_widget(form.login) }}
           </div>
           <div class="form-group">
               <label for="textarea">{{ form_label(form.password) }}</label>
               {{ form_widget(form.password) }}
           </div>
           <div class="form-group">
               <label for="textarea">{{ form_label(form.firstname) }}</label>
               {{ form_widget(form.firstname) }}
           </div>
           <div class="form-group">
               <label for="textarea">{{ form_label(form.lastname) }}</label>
               {{ form_widget(form.lastname) }}
           </div>
           <div class="form-group">
               <label for="textarea">{{ form_label(form.sex) }}</label>
               {{ form_widget(form.sex) }}
           </div>
           <div class="form-group">
               <label for="textarea">{{ form_label(form.email) }}</label>
               {{ form_widget(form.email) }}
           </div>
           <button type="submit">Save</button>
       </div>

           {{ form_end(form) }}
       </div>
    </div>
{% endblock %}
